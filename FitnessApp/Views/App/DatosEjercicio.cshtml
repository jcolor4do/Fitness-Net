            <label class="input-group-text" for="rutina">Seleccione el circuito</label>
            <select required class="form-select" id="rutina">
                <option selected>Selecciona...</option>
                <option value="1">Circuito 1</option>
                <option value="2">Circuito 2</option>
                <option value="3">Circuito 3</option>
            </select>
        </div>
    </div>

    <div class="col-4">
        <div class="input-group mb-4">
            <label class="input-group-text" for="rutina">Seleccione el ejercicio</label>
